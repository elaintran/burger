<div class="container">
    <div class="burger-section">
        <div class="row">
            <div class="col-md-7 menu-section">
                <div class="menu-title">
                    <h2 class="mb-0">Burger Menu</h2>
                    <i class="fas fa-plus-circle" data-toggle="modal" data-target="#burger-modal"></i>
                </div>
                <div class="row">
                    {{#each menu}}
                    <div class="col-12">
                        <div class="burger-item">
                            <div class="row">
                                <div class="col-7">
                                    <h6><span class="burger-name">{{burger_name}}</span> @ $<span class="burger-price">{{burger_price}}</span></h6>
                                </div>
                                <div class="col-5">
                                    <input type="checkbox" name="burger-item" id="burger-{{id}}">
                                    <label for="burger-{{id}}" data-burger="{{burger_name}}" data-price="{{burger_price}}" class="add-item">
                                        <p>+ Add To Cart</p>
                                    </label>
                                </div>
                            </div>
                            <p>{{burger_description}}</p>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-5">
                <div class="accordion cart" id="accordionExample">
                    <div class="card">
                        <div class="card-header" id="headingOne" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            <h6 class="mb-0 pb-0">Order Summary</h6>
                        </div>
                        <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="ordered">
                                    <div class="row">
                                        {{#each burgers}}
                                            {{#unless devoured}}
                                            <div class="col-9">
                                                <p class="burger-checkout" data-id="{{id}}" data-devoured="{{devoured}}">{{burger_name}}</p>
                                            </div>
                                            <div class="col-3">
                                                <p class="price-checkout">${{burger_price}}</p>
                                            </div>
                                            {{/unless}}
                                        {{/each}}
                                    </div>
                                </div>
                                <button class="round-btn checkout">Checkout</button>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headingTwo" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            <h6 class="mb-0 pb-0">Purchase History</h6>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="ordered">
                                    <div class="row">
                                        {{#each burgers}}
                                            {{#if devoured}}
                                            <div class="col-9">
                                                <p>{{burger_name}}</p>
                                            </div>
                                            <div class="col-3">
                                                <p>${{burger_price}}</p>
                                            </div>
                                            {{/if}}
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="burger-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Add A Custom Burger</h2>
                    {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button> --}}
                </div>
                <div class="modal-body">
                    <form class="burger-form" method="POST">
                        <div class="row">
                            <div class="col-6">
                                <label for="name">Name</label>
                                <input type="text" name="name" id="burger" placeholder="Hamburger" required>
                            </div>
                            <div class="col-6">
                                <label for="price">Price</label>
                                <input type="number" name="price" id="price" placeholder="2.00" min="0.00" max="10000.00" step="0.01" required>
                            </div>
                            <div class="col-12">
                                <label for="description">Description</label><br>
                                <textarea name="description" id="description" placeholder="Enter a brief description about your burger." required></textarea>
                            </div>
                        </div>
                        <input type="submit" class="round-btn add-burger" value="Add Burger">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>