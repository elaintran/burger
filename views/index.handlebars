<div class="container">
    <div class="burger-section">
        <div class="row">
            <div class="col-md-7">
                <div class="menu-title">
                    <h2>Burger Menu</h2>
                </div>
                <div class="row">
                    {{#each burgers}}
                    <div class="col-12">
                        <div class="burger-item">
                            <div class="row">
                                <div class="col-9">
                                    <div class="burger-title">
                                        <h6 class="burger-name">{{burger_name}}</h6>
                                        {{!-- <i class="fas fa-pen"></i> --}}
                                    </div>
                                </div>
                                <div class="col-3">
                                    <h6 class="price">{{burger_price}}</h6>
                                </div>
                            </div>
                            <p>{{burger_ingredients}}</p>
                            <input type="checkbox" name="burger-item" id="burger-{{id}}">
                            <label for="burger-{{id}}" class="add-item">
                                <p>+ Add To Cart</p>
                            </label>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="col-md-5">
                <div class="cart">
                    <h6>Order Summary</h6>
                    <div class="ordered">
                        <div class="row">
                            <div class="col-9">
                                <p>Hamburger</p>
                            </div>
                            <div class="col-3">
                                <p>1.39</p>
                            </div>
                            <div class="col-9">
                                <p>Cheeseburger</p>
                            </div>
                            <div class="col-3">
                                <p>1.39</p>
                            </div>
                            <div class="col-9">
                                <p>Spicy Chicken Burger</p>
                            </div>
                            <div class="col-3">
                                <p>1.39</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-9">
                            <p style="text-transform:uppercase;">Total</p>
                        </div>
                        <div class="col-3">
                            <p>300</p>
                        </div>
                    </div>
                    <button class="checkout">Checkout</button>
                </div>
            </div>
        </div>
    </div>
</div>